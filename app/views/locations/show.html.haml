#preloader{:style => "padding: 50px 30px 30px"}
  - title "Location" 
  %h1= @location.address
  - form_for(@location, :method => :put, :url => itinerary_location_path(params[:itinerary_id], @location)) do |f|
    %p= f.text_area(:description, :style => "width: 900px; font: normal 1.1em verdana", :id => "field1")
    %p= f.submit("Save")

:javascript
  uki([
       { view: 'Box', rect: '0 0 1000 31', anchors: 'left top right', background: 'theme(panel)',
           childViews: { view: 'Button',   rect: '10px 4px 100px 24px',  id: "back_to_map", anchors: 'left top', text: 'Back To Map' }
       },
   ]).attachTo( window, '1000 630' );

   uki("#back_to_map").bind('click', function() {
      window.location = "#{itinerary_path(params[:itinerary_id])}"
   });
   
   bkLib.onDomLoaded(function() {
   	new nicEditor(new nicEditor({buttonList : ['bold','italic','underline','left','center','right','ol','ul','fontSize','fontFamily','fontFormat','superscript','subscript','indent','outdent','link','unlink','striketrhough','forecolor','bgcolor','image','upload']})).panelInstance('field1');
   });