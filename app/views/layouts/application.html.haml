!!!
%html
  %head
    %title
      = h(yield(:title))
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    - if protect_against_forgery?
      :javascript
        window._auth_token_name = "#{request_forgery_protection_token}";
        window._auth_token = "#{form_authenticity_token}";
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"
    = javascript_include_tag "jquery.item-suggest.yui"
    = javascript_include_tag "jquery.dragsor.min"
    = javascript_include_tag "jquery.manage_locations_googlev2"
    = javascript_include_tag "http://static.ukijs.org/pkg/0.0.9/uki.js"
    = javascript_include_tag "nicedit.js"
    = javascript_include_tag "application"
    %script{ :src => "http://maps.google.com/maps?file=api&v=2&sensor=false&key=#{GOOGLE_APPLICATION_ID}", :type => "text/javascript" }
  %body
    #user_nav  
      
      - if current_user
        = link_to "Logout", logout_path
      - else
        = link_to "Log in", login_path
        = link_to "Register", new_user_path
    = yield