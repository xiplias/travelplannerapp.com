!!!
%html
  %head
    %title
      = h(yield(:title) || "Untitled")
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    - if protect_against_forgery?
      :javascript
        window._auth_token_name = "#{request_forgery_protection_token}";
        window._auth_token = "#{form_authenticity_token}";
    = yield(:head)
  %body
    = yield
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js"
    = javascript_include_tag "jquery.item-suggest.yui"
    = javascript_include_tag "jquery.dragsor.min"
    = javascript_include_tag "math.uuid"
    
    = javascript_include_tag "application"
    %script{ :src => "http://maps.google.com/maps?file=api&v=2&sensor=false&key=ABQIAAAAavRveM0sb5JQ-mR6tmNMSxT2yXp_ZAY8_ufC3CFXhHIE1NvwkxQ1i3bnuZkRvQkMy4gmkFlGBq9L8g", :type => "text/javascript" }
